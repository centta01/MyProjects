<main>
  <div id="nav-wrapper" class="col-md-2 bg-dark">
    <%- include('./partials/sidebar-nav') %>
  </div>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-4"></div>

      <form class="col-md-4" onsubmit="return validateDate(this)" method="POST" action="/create_gathering">
        <div class="mb-3">
          <label for="herdName" class="form-label">Herd Selection</label>
          <select class="form-select" id="herdName" name="herdName" required="true">
            <option value="" selected>Select an option</option>
            <% userHerds.forEach((herd) => { %>
              <option value="<%= herd.id %>"><%= herd.herdName %></option>
            <% }) %>
          </select>
        </div>
        <div class="mb-3">
          <label for="eventName" class="form-label">Gathering Name</label>
          <input type="text" class="form-control" id="eventName" name="eventName" placeholder="" required="true">
        </div>
        <div class="mb-3">
          <label for="eventDescription" class="form-label">Gathering Description - Provide a description of your
            event that gets other Nerds excited to join in the fun!
          </label>
          <textarea class="form-control" id="eventDescription" name="eventDescription" rows="3"></textarea>
        </div>

        <div class="mb-3">
          <label for="locationName" class="form-label">Location Description</label>
          <input type="text" class="form-control" id="locationName" name="locationName" placeholder="" required="true">
        </div>

        <div class="mb-3">
          <label for="addressValue" class="form-label">Address</label>
          <input type="text" class="form-control" id="addressValue" name="addressValue" placeholder="">
        </div>

        <div class="mb-3">
          <label for="datePicker" class="form-label">What Date?</label>
          <input type="date" class="form-control" id="datePicker" name="datePicker" required="true">
        </div>

        <div class="mb-3">
          <label for="timePicker" class="form-label">What Time?</label>
          <input type="time" class="form-control" id="timePicker" name="timePicker" placeholder="" required="true">
        </div>

        <div class="d-flex justify-content-end">
          <button type="submit" class="btn btn-primary mb-3">Gather the Herd!</button>
        </div>

      </form>
    </div>
    <div class="col-md-4"></div>

  </div>
  <script type="text/javascript" src="/javascripts/create_gathering.js">
  </script>
</main>